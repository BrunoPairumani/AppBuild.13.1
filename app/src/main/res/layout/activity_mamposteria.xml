<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.pairumani.appbuild.MamposteriaActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="20dp"
        android:text="MAMPOSTERIA"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        android:text="Altura (m)"
        android:textAlignment="center" />

    <EditText
        android:layout_width="150dp"
        android:id="@+id/Maltura"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:inputType="numberDecimal"

        android:textAlignment="center" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"

        android:text= "Ancho (m)"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/Manchura"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"

        android:text=" % Desperdicio"
        android:textAlignment="center"
        android:id="@+id/textView" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"

        android:id="@+id/edtdesperdicio"

        android:textAlignment="center"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"

        android:text="Tipo de Ladrillo"
        android:textAlignment="center" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
android:layout_marginLeft="180dp"
        android:text="Espesor Mortero"
        android:textAlignment="center" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="80dp"

        android:text="Longitud"
        android:textAlignment="center" />

    <EditText

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:id="@+id/Mlargo"
        android:inputType="numberDecimal"

        android:textAlignment="center" />

    <RelativeLayout
        android:layout_marginTop="330dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content">



                <RadioGroup
            android:id="@+id/Ladrillo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="vertical"/>


            <RadioButton
                android:layout_width="131dp"
                android:layout_height="wrap_content"
android:id="@+id/rbtizon"

                android:layout_alignParentStart="true"

                android:text="Muro en Tizón: 7*12*22 (cm)"
               >


            </RadioButton>

            <RadioButton
                android:id="@+id/rbsoga"
                android:layout_width="132dp"

                android:layout_height="wrap_content"



                android:layout_marginTop="50dp"
                android:text="Muro en Soga: 7*22*12 (cm)"
                >


            </RadioButton>

            <RadioButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                    android:id="@+id/rbpapelillo"
                android:layout_marginTop="100dp"
                android:text="Muro en Papelillo: 12*22*7 (cm)"
               />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="180dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="190dp"
        android:layout_height="wrap_content">


  <RadioGroup

      android:layout_width="180dp"

      android:layout_height="200dp">




  </RadioGroup>

        <RadioButton
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbespesor1"

            android:layout_alignParentStart="true"

            android:text="1*1 (cm)"
            >


        </RadioButton>

        <RadioButton
            android:id="@+id/rbespesor2"
            android:layout_width="132dp"

            android:layout_height="wrap_content"



            android:layout_marginTop="50dp"
            android:text="1.2*1.2 (cm)"
          >


        </RadioButton>

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbespesor3"
            android:layout_marginTop="100dp"
            android:text="1.5*1.5 (cm)"
         />


    </RelativeLayout>


    <TextView
        android:id="@+id/txtarea"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="200dp"

        android:layout_marginTop="160dp"
        android:text="Área"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/txtarea"
        android:text="Cantidad de Ladrillos"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="240dp"
    android:text="Calcular"
    android:onClick="Operar"
    android:id="@+id/btncalcular"

    />


</RelativeLayout>
